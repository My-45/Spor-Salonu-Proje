@model SporSalonu.Models.ViewModels.HizmetTuruViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">➕ Yeni Hizmet Türü Ekle</h4>
            </div>
            <div class="card-body">
                <form action="/Admin/HizmetTuru/Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label">Hizmet Adı *</label>
                        <input name="Ad" class="form-control" placeholder="Örn: Kişisel Antrenman" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="Aciklama" class="form-control" rows="3" placeholder="Hizmet açıklaması"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Süre (Dakika) *</label>
                            <input name="Sure" type="number" class="form-control" value="60" min="15" max="300" required />
                            <small class="text-muted">15-300 dakika arası</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Ücret (TL) *</label>
                            <input name="Ucret" type="number" step="0.01" class="form-control" value="100" min="0" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Salon *</label>
                            <select name="SalonId" class="form-select" required>
                                <option value="">Salon Seçin</option>
                                @if (ViewBag.Salonlar != null)
                                {
                                    @foreach (SelectListItem salon in ViewBag.Salonlar)
                                    {
                                        <option value="@salon.Value">@salon.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="hidden" name="Aktif" value="false" />
                        <input name="Aktif" type="checkbox" class="form-check-input" id="aktifCheck" value="true" checked />
                        <label class="form-check-label" for="aktifCheck">Aktif</label>
                    </div>

                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/Admin/HizmetTuru/Index" class="btn btn-secondary">
                            ❌ İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            ✅ Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}