@model IEnumerable<SporSalonu.Models.Entities.Salon>
@{
    ViewData["Title"] = "Salonlar";
}

<!-- Başarı Mesajı -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✅ Başarılı!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Başlık ve Yeni Ekle Butonu -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🏢 Salonlar</h2>
    <a href="/Admin/Salon/Create" class="btn btn-primary">
        ➕ Yeni Salon Ekle
    </a>
</div>

<!-- Salon Listesi -->
<div class="card shadow">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Salon Adı</th>
                            <th>Adres</th>
                            <th>Açılış Saati</th>
                            <th>Kapanış Saati</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><strong>@item.Ad</strong></td>
                                <td>@item.Adres</td>
                                <td>@item.AcilisSaati.ToString(@"hh\:mm")</td>
                                <td>@item.KapanisSaati.ToString(@"hh\:mm")</td>
                                <td>
                                    @if (item.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Admin/Salon/Details/@item.Id" class="btn btn-sm btn-info" title="Detay">
                                            👁️
                                        </a>
                                        <a href="/Admin/Salon/Edit/@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            ✏️
                                        </a>
                                        <a href="/Admin/Salon/Delete/@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                            🗑️
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p class="mb-0">Henüz salon eklenmemiş. <a href="/Admin/Salon/Create" class="alert-link">İlk salonu eklemek için tıklayın.</a></p>
            </div>
        }
    </div>
</div>