@model SporSalonu.Models.ViewModels.SalonViewModel
@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">➕ Yeni Salon Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Salon" asp-action="Create" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label"></label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: FitLife Spor Merkezi" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adres" class="form-label"></label>
                        <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Salon adresi"></textarea>
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AcilisSaati" class="form-label"></label>
                            <input asp-for="AcilisSaati" type="time" class="form-control" />
                            <span asp-validation-for="AcilisSaati" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="KapanisSaati" class="form-label"></label>
                            <input asp-for="KapanisSaati" type="time" class="form-control" />
                            <span asp-validation-for="KapanisSaati" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Aktif" class="form-check-input" />
                        <label asp-for="Aktif" class="form-check-label"></label>
                    </div>

                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-area="Admin" asp-controller="Salon" asp-action="Index" class="btn btn-secondary">
                            ❌ İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            ✅ Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
}