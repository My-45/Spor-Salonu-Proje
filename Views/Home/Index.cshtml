@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    :root {
        --primary: #6366f1;
        --secondary: #ec4899;
        --success: #10b981;
        --info: #06b6d4;
        --warning: #f59e0b;
    }

    body {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 20px;
        padding: 4rem 2rem;
        box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=1920&q=80');
            background-size: cover;
            opacity: 0.1;
            z-index: 0;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    /* Stat Cards - 3D Hover Effect */
    .stat-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.9));
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(99, 102, 241, 0.1);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        transform-style: preserve-3d;
        perspective: 1000px;
    }

        .stat-card:hover {
            transform: translateY(-15px) rotateX(5deg) rotateY(5deg) scale(1.05);
            box-shadow: 0 25px 60px rgba(99, 102, 241, 0.25);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.2) rotate(5deg);
    }

    .stat-icon-1 {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
    }

    .stat-icon-2 {
        background: linear-gradient(135deg, #ec4899, #f43f5e);
    }

    .stat-icon-3 {
        background: linear-gradient(135deg, #10b981, #14b8a6);
    }

    /* Counter Animation */
    .counter {
        font-size: 2rem;
        font-weight: bold;
        display: inline-block;
    }

    /* Service Cards - 3D Effect */
    .service-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(0, 0, 0, 0.05);
        height: 100%;
        transform-style: preserve-3d;
        perspective: 1000px;
    }

        .service-card:hover {
            transform: translateY(-12px) rotateX(3deg) scale(1.03);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

    .service-header {
        height: 150px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .service-card:hover .service-header {
        transform: scale(1.1);
    }

    .service-header::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.1) 50%, rgba(255,255,255,0.1) 75%, transparent 75%, transparent);
        background-size: 20px 20px;
        animation: move 4s linear infinite;
    }

    @@keyframes move {
        0% {
            background-position: 0 0;
        }

        100% {
            background-position: 20px 20px;
        }
    }

    .service-body {
        padding: 1.5rem;
    }

    /* Coach Cards - 3D Effect */
    .coach-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(0, 0, 0, 0.05);
        height: 100%;
        transform-style: preserve-3d;
        perspective: 1000px;
    }

        .coach-card:hover {
            transform: translateY(-12px) rotateY(5deg) scale(1.05);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

    .coach-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin-bottom: 1rem;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
        transition: transform 0.3s ease;
    }

    .coach-card:hover .coach-avatar {
        transform: scale(1.15) rotate(5deg);
    }

    /* Testimonials Carousel */
    .testimonials-section {
        background: white;
        border-radius: 20px;
        padding: 3rem 2rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        margin-bottom: 4rem;
    }

    .testimonial-carousel {
        position: relative;
        overflow: hidden;
        max-width: 800px;
        margin: 0 auto;
    }

    .testimonial-track {
        display: flex;
        transition: transform 0.5s ease;
    }

    .testimonial-item {
        min-width: 100%;
        padding: 2rem;
        text-align: center;
    }

    .testimonial-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .testimonial-text {
        font-size: 1.1rem;
        font-style: italic;
        color: #555;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .testimonial-author {
        font-weight: 600;
        color: var(--primary);
    }

    .testimonial-rating {
        color: #fbbf24;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .carousel-dots {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
    }

    .carousel-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #ddd;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .carousel-dot.active {
            background: var(--primary);
            width: 30px;
            border-radius: 6px;
        }

    /* Badge Styles */
    .badge-custom {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .badge-outline {
        border: 2px solid var(--primary);
        color: var(--primary);
        background: rgba(99, 102, 241, 0.1);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .price-badge {
        background: linear-gradient(135deg, #10b981, #14b8a6);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 700;
        font-size: 1.1rem;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 20px;
        padding: 4rem 2rem;
        text-align: center;
        color: white;
        margin-top: 4rem;
        box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
    }

    /* Animations */
    .fade-in {
        animation: fadeIn 0.6s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .glow {
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.5);
        animation: glow 2s ease-in-out infinite alternate;
    }

    @@keyframes glow {
        from {
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.5);
        }

        to {
            box-shadow: 0 0 40px rgba(236, 72, 153, 0.5);
        }
    }
</style>

