@model IEnumerable<SporSalonu.Models.Entities.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📋 Randevularım</h2>
        <a href="/Randevu/RandevuAl" class="btn btn-primary">
            ➕ Yeni Randevu Al
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <div class="mb-4" style="font-size: 4rem; opacity: 0.5;">📅</div>
                <h4 class="text-muted">Henüz randevunuz bulunmuyor</h4>
                <p class="text-muted">İlk randevunuzu oluşturmak için aşağıdaki butona tıklayın</p>
                <a href="/Randevu/RandevuAl" class="btn btn-primary btn-lg mt-3">
                    Randevu Al
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var randevu in Model)
            {
                var isPast = randevu.RandevuTarihi.Date < DateTime.Today;
                var isToday = randevu.RandevuTarihi.Date == DateTime.Today;
                
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 randevu-card">
                        <!-- Durum Badge -->
                        <div class="card-header border-0 d-flex justify-content-between align-items-center"
                             style="background: @(randevu.Durum switch {
                                 RandevuDurumu.Beklemede => "linear-gradient(135deg, #f59e0b, #fbbf24)",
                                 RandevuDurumu.Onaylandi => "linear-gradient(135deg, #10b981, #14b8a6)",
                                 RandevuDurumu.Tamamlandi => "linear-gradient(135deg, #6366f1, #8b5cf6)",
                                 RandevuDurumu.IptalEdildi => "linear-gradient(135deg, #ef4444, #f87171)",
                                 _ => "#6c757d"
                             }); color: white;">
                            <span class="fw-bold">
                                @switch (randevu.Durum)
                                {
                                    case RandevuDurumu.Beklemede:
                                        <span>⏳ Onay Bekliyor</span>
                                        break;
                                    case RandevuDurumu.Onaylandi:
                                        <span>✅ Onaylandı</span>
                                        break;
                                    case RandevuDurumu.Tamamlandi:
                                        <span>✔️ Tamamlandı</span>
                                        break;
                                    case RandevuDurumu.IptalEdildi:
                                        <span>❌ İptal Edildi</span>
                                        break;
                                }
                            </span>
                            @if (isToday && randevu.Durum == RandevuDurumu.Onaylandi)
                            {
                                <span class="badge bg-danger">BUGÜN</span>
                            }
                        </div>

                        <div class="card-body">
                            <!-- Tarih ve Saat -->
                            <div class="mb-3 p-3 bg-light rounded">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="me-2" style="font-size: 1.5rem;">📅</span>
                                    <div>
                                        <small class="text-muted d-block">Tarih</small>
                                        <strong>@randevu.RandevuTarihi.ToString("dd MMMM yyyy, dddd")</strong>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="me-2" style="font-size: 1.5rem;">🕐</span>
                                    <div>
                                        <small class="text-muted d-block">Saat</small>
                                        <strong>@randevu.RandevuSaati.ToString(@"hh\:mm")</strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Detaylar -->
                            <ul class="list-unstyled mb-3">
                                <li class="mb-2">
                                    <strong>👨‍🏫 Antrenör:</strong><br>
                                    @randevu.Antrenor?.AdSoyad
                                </li>
                                <li class="mb-2">
                                    <strong>🏢 Salon:</strong><br>
                                    @randevu.Antrenor?.Salon?.Ad
                                </li>
                                <li class="mb-2">
                                    <strong>💼 Hizmet:</strong><br>
                                    @randevu.HizmetTuru?.Ad
                                </li>
                                <li class="mb-2">
                                    <strong>⏱️ Süre:</strong> @randevu.HizmetTuru?.Sure dk
                                </li>
                                <li>
                                    <strong>💰 Ücret:</strong> 
                                    <span class="text-success fw-bold">@randevu.HizmetTuru?.Ucret.ToString("N2") ₺</span>
                                </li>
                            </ul>

                            @if (!string.IsNullOrEmpty(randevu.Notlar))
                            {
                                <div class="alert alert-info py-2 px-3 mb-3">
                                    <small><strong>📝 Not:</strong> @randevu.Notlar</small>
                                </div>
                            }

                            <!-- İşlemler -->
                            @if (randevu.Durum == RandevuDurumu.Beklemede || randevu.Durum == RandevuDurumu.Onaylandi)
                            {
                                <form method="post" action="/Randevu/IptalEt/@randevu.Id" 
                                      onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm w-100">
                                        🗑️ Randevuyu İptal Et
                                    </button>
                                </form>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-0 text-muted text-center">
                            <small>Oluşturulma: @randevu.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- İstatistikler -->
        <div class="row mt-5">
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="mb-0">@Model.Count()</h3>
                        <small class="text-muted">Toplam Randevu</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="mb-0 text-warning">@Model.Count(r => r.Durum == RandevuDurumu.Beklemede)</h3>
                        <small class="text-muted">Onay Bekliyor</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="mb-0 text-success">@Model.Count(r => r.Durum == RandevuDurumu.Onaylandi)</h3>
                        <small class="text-muted">Onaylandı</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="mb-0 text-primary">@Model.Count(r => r.Durum == RandevuDurumu.Tamamlandi)</h3>
                        <small class="text-muted">Tamamlandı</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .randevu-card {
        transition: all 0.3s ease;
    }
    .randevu-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }
</style>