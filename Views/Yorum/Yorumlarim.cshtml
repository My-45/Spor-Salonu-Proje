@model List<SporSalonu.Models.Entities.Yorum>
@{
    ViewData["Title"] = "Yorumlarım";
}

<style>
    :root {
        --primary: #6366f1;
        --secondary: #ec4899;
    }

    body {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 20px;
        padding: 2rem;
        color: white;
        text-align: center;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(99, 102, 241, 0.3);
    }

    .yorum-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }

        .yorum-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
        }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .status-onayda {
        background: linear-gradient(135deg, #f59e0b, #f97316);
        color: white;
    }

    .status-onaylandi {
        background: linear-gradient(135deg, #10b981, #14b8a6);
        color: white;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-danger-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(239, 68, 68, 0.4);
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 5rem;
        opacity: 0.3;
        margin-bottom: 1rem;
    }
</style>

<div class="container my-5">
    <!-- Başlık -->
    <div class="page-header">
        <h1 class="fw-bold mb-2">💬 Yorumlarım</h1>
        <p class="mb-0">Yaptığınız yorumları buradan takip edebilirsiniz</p>
    </div>

    <!-- Bildirimler -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Yorumlar -->
        @foreach (var yorum in Model)
        {
            <div class="yorum-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <!-- Durum -->
                        <div class="mb-3">
                            @if (yorum.Onaylandi)
                            {
                                <span class="status-badge status-onaylandi">
                                    ✅ Onaylandı
                                </span>
                            }
                            else
                            {
                                <span class="status-badge status-onayda">
                                    ⏳ Onay Bekliyor
                                </span>
                            }
                        </div>

                        <!-- Puan -->
                        <div class="mb-3">
                            <strong>Puanınız:</strong>
                            <span style="color: #fbbf24; font-size: 1.2rem;">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= yorum.Puan)
                                    {
                                        <span>⭐</span>
                                    }
                                    else
                                    {
                                        <span style="opacity: 0.3;">⭐</span>
                                    }
                                }
                            </span>
                        </div>

                        <!-- Yorum İçeriği -->
                        <div class="mb-3">
                            <p class="mb-0" style="font-style: italic; color: #555;">
                                "@yorum.Icerik"
                            </p>
                        </div>

                        <!-- Tarih -->
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i>
                            @yorum.OlusturmaTarihi.ToString("dd MMMM yyyy HH:mm", new System.Globalization.CultureInfo("tr-TR"))
                        </small>
                    </div>

                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <!-- Sil Butonu -->
                        <form asp-action="Sil" asp-route-id="@yorum.Id" method="post"
                              onsubmit="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger-gradient">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Boş Durum -->
        <div class="empty-state">
            <div class="empty-state-icon">💬</div>
            <h3 class="text-muted mb-3">Henüz Yorum Yapmadınız</h3>
            <p class="text-muted mb-4">Deneyiminizi bizimle paylaşın ve ilk yorumunuzu yapın!</p>
            <a asp-action="Olustur" class="btn btn-lg px-5 py-3"
               style="background: linear-gradient(135deg, #6366f1, #ec4899); color: white; border: none; border-radius: 12px;">
                ✍️ İlk Yorumu Yap
            </a>
        </div>
    }

    <!-- Geri Dön Butonu -->
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
        </a>
    </div>
</div>